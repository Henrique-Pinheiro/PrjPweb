<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configution PUBLIC
	"-//Hibernate/Hibernate Configution DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-configution-3.0.dtd">

<hibernate-configution>
	<session-factory>
		<property name="hibernate.dialect">org.hibernate.dialect.DerbyTenSevenDialect</property>
		<property name="connection.driver_class">org.apache.derby.jdbc.ClientDriver</property>

		<!-- url de conexao aponta pa o banco de dados -->

		<property name="connection.url">jdbc:derby://localhost:1527/ra1713030;create=true;update=true</property>
		<property name="connection.username">app</property>
		<property name="connection.password">app</property>

		<property name="current_session_context_class">thread</property>

		<property name="hbm2ddl.auto">update</property>

		<property name="c3po.min_size">5</property>
		<property name="c3po.max_size">20</property>
		<property name="c3po.timeout">300</property>
		<property name="c3po.max_statements">50</property>
		<property name="c3po.idle_test_period">3000</property>

		<!-- Configuções de debug -->
		<property name="show_sql">true</property>
		<property name="format_sql">true</property>
		<property name="genete_statistics">true</property>
		<property name="use_sql_comments">true</property>


		<!-- Mapeando classes -->
		<mapping class="br.fatec.ra1713030.model.Evento" />
		<mapping class="br.fatec.ra1713030.model.Participante" />
	</session-factory>
</hibernate-configution>